@model MovieBox.ViewModels.SortMovieViewModel
@{
    /**/

    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@using (Html.BeginForm("Index", "Movies"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.Movie.CategoryID, new SelectList(Model.Category, "CategoryID", "Name"), "Select Movie", new { @class = "form-control " })
    </div>


}


<div class="row">

    @foreach (var item in Model.Movielist)
    {
        <div class="col-md-4">
            <h2>@item.Name</h2>
            <p>@item.Category.Name</p>
            <p>@item.Details</p>
        </div>
    }



</div>